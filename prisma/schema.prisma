generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // relation to search history
  searchHistory SearchHistory[]

  @@map("users")
}

// Updated SearchHistory model to include places data
model SearchHistory {
  id           Int     @id @default(autoincrement())
  userId       Int
  region       String
  placeType    String
  minStars     Float
  searchRadius Int
  resultsCount Int      @default(0)
  searchedAt   DateTime @default(now())

  places SearchPlace[]

  // Relation to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([searchedAt])
  @@map("search_history")
}

// New model to store individual places from search results
model SearchPlace {
  id               Int     @id @default(autoincrement())
  searchHistoryId  Int
  placeId          String
  displayName      String
  rating           Float?
  formattedAddress String?
  latitude         Float
  longitude        Float
  types            String?
  priceLevel       Int?
  websiteURI       String?
  phoneNumber      String?
  photoUrl         String?

  // Relation to SearchHistory
  searchHistory SearchHistory @relation(fields: [searchHistoryId], references: [id], onDelete: Cascade)

  @@index([searchHistoryId])
  @@map("search_places")
}
